#include "SysTick.h"
//#include "core_cm4.h"
#include "MK64F12.h"
#include "gpio.h"
#include "board.h"
#include "hardware.h"
#include <stdio.h>


bool SysTick_Init (void)
{
    //Inicializacion de SysTick
	SysTick->CTRL = 0x00;
	SysTick->LOAD = 1000000000 - 1; // 500ms @ 100MHz
	SysTick->VAL = 0x00;
	SysTick->CTRL = SysTick_CTRL_CLKSOURCE_Msk | SysTick_CTRL_TICKINT_Msk | SysTick_CTRL_ENABLE_Msk;
}

__ISR__ SysTick_Handler(void)
{
	gpioToggle(PIN_LED_RED);
	printf();
}
